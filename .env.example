# Example .env file for local development
# Copy this file to .env and fill in the values

# Telegram Bot Token (get from @BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Allowed Chat IDs (comma-separated)
# Get your Chat ID from @userinfobot
ALLOWED_CHAT_IDS=123456789,987654321

# Log level: debug, info, warn, error
LOG_LEVEL=debug

# State polling interval (seconds)
POLLING_INTERVAL=30

# Home Assistant API URL
# For local development use external address of your HA
HA_API_URL=http://192.168.1.100:8123/api

# Home Assistant Long-Lived Access Token
# Create in HA user profile: Profile -> Long-Lived Access Tokens
HA_TOKEN=your_home_assistant_token_here
